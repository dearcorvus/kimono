<!--pages/order/order.wxml-->
<wxs module="dateUtil" src="../../utils/dateTime.wxs"></wxs>

<view class="order_box">
  <view class="order_child" wx:for='{{order_item}}'>
    <navigator url="../orderinfo/orderinfo?orderid={{item.id}}">
        <view class="order_info">
      <text>{{item.name}}</text>
      <view class="order_time">{{item.create_time}}</view>
      <view class="order_day" wx:if='{{item.mtime}}' >{{item.mtime}}小时</view> 
      <view class="price" wx:if='{{ item.price}}' >{{item.price == '' ? '0' : item.price}}元</view>
    </view>
    <view class='order_static' >{{item.status == 2 ? '进行中' : (item.status == 3 ? '待支付' : '已完结')}}</view>
    </navigator>
  </view>
</view>
