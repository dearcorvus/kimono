<!--pages/hotel/hotel.wxml-->
<block wx:if='{{isshow}}'>
  <map id="map" scale="{{scale}}" include-points="{{markers}}" markers="{{markers}}" bindmarkertap="showModal" data-id="{{markers}}" polyline="{{polyline}}"  show-location style="width: 100%; height: 100%;">
 
 
    <!--屏幕背景变暗的背景  -->
    <cover-view class="commodity_screen" bindtap="hideModal" wx:if="{{showModalStatus}}"></cover-view>
    <!--弹出框  -->
    <cover-view animation="{{animationData}}" class="commodity_attr_box" wx:if="{{showModalStatus}}">
 
      <cover-view class='placeBox'>
 
        <cover-view class='placeViewLt'>
          <cover-view class='viewTitle'>{{myall.title}}</cover-view>
          <cover-view class='viewAddr'>{{myall.address}}</cover-view>
        </cover-view>
        <cover-view class='placeViewRt'>
          <cover-image data-id="{{myall.id}}" bindtap="opendetail" src='{{myall.pic}}'></cover-image>
        </cover-view>
 
      </cover-view>
 
 
      <cover-view class='viewIcon'>
        <cover-image class='indexIcon' src='../../static/images/yingyeshijian.png'></cover-image>
        <cover-view class='timeText'>{{myall.bank_hours}}</cover-view>
 
        <cover-image class='indexIcon1' src='../../static/images/web-icon-.png' bindtap='calling' data-tel='{{myall.tel}}'></cover-image>
        <cover-view class='timeText1'  bindtap='calling' data-tel='{{myall.tel}}' >电话</cover-view>
        
        <cover-image class='indexIcon2' src='../../static/images/daohang.png' bindtap="gomap" data-lon="{{myall.address_y}}" data-lat="{{myall.address_x}}"></cover-image>
        <cover-view class='timeText1' bindtap="gomap" data-lon="{{myall.address_y}}" data-lat="{{myall.address_x}}" data-address="{{myall.title}}">导航</cover-view>
      </cover-view>
 
    </cover-view>
  </map>
 
</block>
