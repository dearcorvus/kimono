/**index.wxss**/
page{
  background-color: #f4f4f4;
}
/* 头部信息 */
.header{
  width: 100%;
  height: 160rpx;
  background-color:#53cfb5; 
  background-image: linear-gradient(#53cfb5, #86fee3);
  background-size: 100% 100%;
}
.header_box{
  font-size: 34rpx;
  color:#fff;
  margin-left: 50rpx;
  padding-top: 20rpx;
}
.header_box view{
  font-size: 22rpx;
  line-height: 50rpx;
}



@import "../components/tabbar/tabbar";
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}



/*底部弹窗开始 -使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.4;
  overflow: hidden;
  z-index: 200;
  color: #fff;
}
.footer{
  z-index: 999;
}


/* 热门 */
.hot_box{
  width: 90%;
  margin: 0 auto;
}
.hot_title{
  font-size: 30rpx;
  color: #363636;
  line-height: 90rpx;
}
.hot_child{
  width: 100%;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
.hot_child image{
  width: 100%;
  min-height: 300rpx;
}

.bbox{
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
  color: #000;
}
.bimg{
  width: 34rpx;
  height: 34rpx;
  margin-right: 10rpx;
}
.b_li{
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}